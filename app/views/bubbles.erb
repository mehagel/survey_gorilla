    <div id='box'>
    </div>
    <script type="text/javascript">
 
var w = 600,
    h = 600;
 
var nodes = d3.range(8).map(function() { return {radius: Math.random() * 12 + 30}; }),
    color = d3.scale.category10();
 
var force = d3.layout.force()
    .gravity(0.5)
    .charge(-1000)
    .nodes(nodes)
    .size([w, h]);
 
var root = nodes[0];
root.radius = 0;
root.fixed = true;
 
force.start();

var svg = d3.select("#box").append("svg:svg")
    .attr("width", w)
    .attr("height", h);
 
var node = svg.selectAll('.node')
    .data(nodes.slice(1))
  .enter().append("g")
  .attr('class', 'node')
  .call(force.drag);
    // .attr("r", function(d) { return d.radius - 2; })
    // .style("fill", function(d, i) { return color(i % 3); })
    // .text(function(d){return '<span>hello</span>'});
 
 node.append('circle')

   .attr("r", function(d) { return d.radius - 2; })
    .style("fill", function(d, i) { return color(i % 3); });

  node.append('text')
  .attr('dx', 12)
  .attr('dy', '.35em')
  .text(function(d) { return "what" })
  .attr('fill', 'black');

force.on("tick", function(e) {
  var q = d3.geom.quadtree(nodes),
      i = 0,
      n = nodes.length;
 
  while (++i < n) {
    q.visit(collide(nodes[i]));
  }
 
  svg.selectAll("circle")
      .attr("cx", function(d) { return d.x; })
      .attr("cy", function(d) { return d.y; });
});
 
// svg.on("mousemove", function() {
